# Server
PORT=3000
HOST=0.0.0.0

# Auth
WEBHOOK_SECRET=change-me-to-a-strong-random-string
API_ACCESS_TOKEN=change-me-to-a-different-strong-random-string
# Required for API auth (non-webhook endpoints)
PUBLIC_ORIGIN=http://localhost:3000

# Dashboard basic auth (required)
DASHBOARD_USER=admin
DASHBOARD_PASSWORD=change-me

# Pi Agent
ANTHROPIC_API_KEY=sk-ant-...
PI_BINARY=pi
TASK_TIMEOUT_MS=600000

# Repository (local path for dev, or GIT_REPO_URL for Fly.io)
REPO_PATH=./data/repo
GIT_REPO_URL=

# Database
DATABASE_PATH=./data/pi-queue.db

# Optional
DEFAULT_PRIORITY=0

# API payload/query caps
API_MAX_PAGE_SIZE=100
API_MAX_OFFSET=10000
API_MAX_TITLE_LENGTH=200
API_MAX_PROMPT_LENGTH=20000
API_MAX_SOURCE_LENGTH=64
API_MAX_EXTERNAL_ID_LENGTH=128
API_MAX_REJECT_REASON_LENGTH=1000
API_MAX_METADATA_BYTES=16384
